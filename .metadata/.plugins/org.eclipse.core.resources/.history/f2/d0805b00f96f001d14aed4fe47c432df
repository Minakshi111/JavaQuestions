package Recursion;

public class say_digit {
	static int sum= 0;
	
	public static void main( String [] str)
	{
		
		int num= 1234;
		
		int rev= convert(num);
		System.out.println(rev);
		System.out.println(sum);
	}

	private static int convert(int num) 
	{
		if(num==0)
			return num;
		int res1= (num%10);
		 sum= sum*10+res1;
		int res= res1 + convert(num/10);
		return res;
	}

}
