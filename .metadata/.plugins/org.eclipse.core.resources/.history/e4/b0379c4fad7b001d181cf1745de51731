package Questions;

public class MediumOfSortedArray {
	
	public static void main(String[] str)
	{
		int arr1[]= {1,3};
		int arr2[]= {4,5};
		
		double res= function(arr1,arr2);
		System.out.println(res);
		
	}
	
	

	public static double function(int[] arr1, int[] arr2) {
	
		int i= 0;
		int j=0;
		int index=0;
		int [] res= new int[arr1.length+arr2.length];
		
		while(i<arr1.length && j< arr2.length)
		{
			if(arr1[i]<arr2[j])
			{
				res[index++]= arr1[i++];
			}
			else
			{
				res[index++]= arr2[j++];
			}
		}
		
		while(i< arr1.length)
		{
				res[index++]= arr1[i++];
		}
		
		while(j< arr2.length)
		{
			res[index++]= arr2[j++];
		}
		
		
		int len= res.length;
		double pos;
		double div= 2.0;
		
		
		if(len%2==0)
		{
			System.out.println("even");
			int mid= len/2;
			int a= res[mid];
			int b= res[mid-1];
			System.out.println(a);
			System.out.println(b);
			
			 pos= (res[mid]+res[mid-1])/div;

		}
		else
		{
			System.out.println("odd");
			 pos= res[len/2];
		}
		return pos;
	}
	

}
