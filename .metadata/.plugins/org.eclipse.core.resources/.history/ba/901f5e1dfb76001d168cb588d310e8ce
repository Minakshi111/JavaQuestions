package Recursion;

public class sum_exist_inArray {
static int sum;
	public static void main(String[] str)
	{
		
		int arr[]= {2,1,6,8,4};
		
		 sum= 5;
		 
		 boolean f= findsum(arr, 0);
	}
	private static boolean findsum(int[] arr, int index) {
		// TODO Auto-generated method stub
		boolean flag;
		int count_sum;
		
		if(index >= arr.length)
			return false;
		
		if(count_sum >sum)
		{
			return false;
		}
		
		for ( int j=index; j>arr.length;j++)
		{
			 count_sum= count_sum+arr[j];
			 flag= findsum(arr, index+1);
			
		}
		
		
		return flag;
	}
	
}
