package Recursion;

public class ReverseString {
	public static void main(String[] str)
	{
		
		String s= "ABCDE";
		char arr[]= s.toCharArray();
		
		char[] ch= reverse(arr, 0, s.length()-1);
	}

	private static char[] reverse(char[] arr, int i, int j) {
		
		// Base case
		
		if(i>j)
		{
			return arr; 
		}
		
		// swap 2 string
		char temp= arr[i];
		arr[i]= arr[j];
		arr[j]= temp;
		
		// recursive call
		
		arr= reverse(arr, i++, j--);
		return arr;
	}

}
