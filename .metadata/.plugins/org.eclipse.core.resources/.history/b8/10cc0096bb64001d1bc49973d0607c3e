package SearchingAlgo;

import java.util.Scanner;

public class pages_allocation_binary_search {

	public static void main(String [] str)
	{
		
		Scanner sc= new Scanner(System.in);
		int n= sc.nextInt();
		int m= sc.nextInt();
		int arr[]= new int[n];
		int sum=0;
		
		for ( int i=0; i<n;i++)
		{
			arr[i]= sc.nextInt();
			sum=sum+arr[i];
		}
		
		int start=0;
		int end= sum;
		int mid= (start+end)/2;
		
		int ans=mid;
		int student=1;
		int total=0;
		boolean isPossible= true;
		
		while(start<= end)
		{			
			 student=1;
			 total=0;
			 isPossible= true;
			// check if this mid is a possible solution or not
			System.out.println("For loop started : ");
			for ( int i=0; i<n;i++)
			{
				if(student<=m)
				{
				total= total+arr[i];
				 if(total>=mid)
				 {
					 System.out.println("Total is: "+total);
					 student= student+1;
					 if(ans>total)
					 ans= total;
					 total=0;					 
				 }
				}
				else
				{
					isPossible=false;
					break;
					// return false ;
				}
			}
						
			if(isPossible)
				end=mid-1;
			else
				start= mid+1;
			
			mid=(start+end)/2;
		
			
		}
		
		System.out.println("Answer is: "+ans);
		
	}
}
