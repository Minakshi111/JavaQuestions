package Two_D_Array;

import java.util.Scanner;

public class RatInMaze {
	
	public static void main(String [] str)
	{
		Scanner sc= new Scanner(System.in);
		
		int n=3;
		int arr[][]= new int[n][n];
		int [][] visited= new int[n][n];
		
		
		for ( int i=0; i<n;i++)
		{
			for ( int j=0; j<n;j++)
			{
				arr[i][j]= sc.nextInt();
				visited[i][j]=0;
			}
		}
		
		
		rat(arr,n,0,0,0,visited,"");
		
		
	}

	private static void rat(int[][] arr, int n, int i, int j, int count, int [][] visited, String path) {
		
		if(i==n-1 && j==n-1)
		{
			// destination condition
			System.out.println(count);
			return;
			
		}
		
		// check 4 conditions
		
		if(i+1<n && arr[i+1][j]==1 && visited[i+1][j]==0)
		{
			visited[i+1][j]=1;
			rat(arr,n,i+1,j,count+1,visited);
			visited[i+1][j]=0;
		}
		
		if(j+1<n && arr[i][j+1]==1 && visited[i][j+1]==0)
		{
			visited[i][j+1]=1;
			rat(arr,n,i,j+1,count+1,visited);
			visited[i][j+1]=0;
		}
		
		if(j-1>=0 && arr[i][j-1]==1 && visited[i][j-1]==0)
		{
			visited[i][j-1]=1;
			rat(arr,n,i,j-1,count+1,visited);
			visited[i][j-1]=0;
		}
		
		if(i-1>=0 && arr[i-1][j]==1 && visited[i-1][j]==0)
		{
			visited[i-1][j]=1;
			rat(arr,n,i-1,j,count+1,visited);
			visited[i-1][j]=0;
			
		}
		
		
		
		
	}
	
	

}
