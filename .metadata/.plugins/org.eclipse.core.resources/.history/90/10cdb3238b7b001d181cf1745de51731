package Questions;

public class Largest_palindrome_string {
	static String res="";
	
	public static void main(String[] str)
	{
		
		String s= "bbcba";
			function(s,"",0,0);
		//	System.out.println(res);
		
	}

	private static String function(String s, String out, int index,int max) {
		
		
		if(index==s.length())
		{
			if(isPalindrome(out))
			{
				System.out.println(out);
				if(max < out.length())
				{
					res= out;
				}
			}
			return res;
		}
		
		// exclude wala call
		
		function(s,out,index+1,max);
		
		// Include call
		
		char ele= s.charAt(index);
		out= out+ele;
		return function(s, out,index+1,max);
		
	}
	
private static boolean isPalindrome(String s1) {
		
		
		int i=0; 
		int j= s1.length()-1;
		
		while (i<j)
		{
			if(s1.charAt(i) != s1.charAt(j))
			{
				return false;
			}
			i=i+1;
			j=j-1;
			
		}	
		return true;
	}

}
