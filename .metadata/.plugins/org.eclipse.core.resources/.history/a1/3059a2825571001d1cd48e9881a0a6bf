package Recursion;

public class binarySearch {
	static int target;
	public static void main(String[] str)
	{
		int arr[]= {2,4,6,8,9};
		 target= 8;
		int e= (arr.length)-1;
		int mid= (0+e)/2;
		int index= search(arr, 0, e, mid );
		
		 System.out.println("Hello "+index);		
	}

	private static int search(int[] arr, int s, int e, int mid) {

		 mid= (s+e)/2;
		
		if(arr[mid]==target)
		{
			return mid;
		}
		
		if(s>=e)
		{
			return -1;
		}
		
		if(arr[mid]> target)
		{
			// left 
			int index= search(arr, s, mid-1, mid);
		}
		else
		{
			// right
			int index= search(arr, mid+1, e, mid);
		}
		return index;	
	}
}
